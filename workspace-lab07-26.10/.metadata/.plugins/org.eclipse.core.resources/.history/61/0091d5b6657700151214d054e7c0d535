package com.naturalprogrammer.spring.sample.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

import com.naturalprogrammer.spring.sample.services.UserService;

@Controller
public class UserController {
	
	private UserService userService;
	
	
	@Autowired
	public void setUserService(UserService userService)
	{
		
		
	}
	
	@RequestMapping("/users/{verficaionCode/verify}")
	public String Verify(@PathVariable("verificationCode") String verificationCode)
	{
		userService.verify(verificationCode);
		
	}

}
