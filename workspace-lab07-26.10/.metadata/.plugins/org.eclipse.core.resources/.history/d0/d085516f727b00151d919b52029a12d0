package com.example.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.dao.Demo4DaoImpl;
import com.example.dao.Demo3DaoImpl;
import com.example.dao.Demo5DaoImpl;
import com.example.dao.DemoClient;
import com.example.dao.DemoDaoImpl;
import com.example.dao.Demo2DaoImpl;

/**
 * Build a sentence by assembling randomly generated subjects, verbs, 
 * articles, adjectives, and nouns.  The individual parts of speech will 
 * be obtained by calling the various DAOs.
 */
@Service
public class SentenceServiceImpl implements SentenceService {

	@Autowired Demo2Client demo2Service;
	@Autowired DemoClient demoService;
	@Autowired Demo3Client demo3Service;
	@Autowired Demo4Client demo4Service;
	@Autowired Demo5Client demo5Service;
	

	/**
	 * Assemble a sentence by gathering random words of each part of speech:
	 */
	public String buildSentence() {
		String sentence = "There was a problem assembling the sentence!";
			sentence = 
					demoService.getWord().getString() + " "
					+ demo2Service.getWord().getString() + " "
					+ demo3Service.getWord().getString() + " "
					+ demo4Service.getWord().getString() + " "
					+ demo5Service.getWord().getString() + " "
			;
		return sentence;
	}	
}
